@inherits UmbracoTemplatePage
@section headerCss{
}

@{
    Layout = "Master.cshtml";
    var pageHeading = Model.Content.Name;
    if (Model.Content.HasProperty("pageHeading") && Model.Content.HasValue("pageHeading"))
        {
        pageHeading = Model.Content.GetPropertyValue("pageHeading").ToString();
        }
        <div class="container">
            <div class="row">
                <div class="box">
                    <div class="col-lg-12 text-center">
                        <h1 class="brand-name">
                            @pageHeading
                        </h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="box">
                    <div class="col-lg-6">
                        @Html.Action("Login", "AccountSurface")
                    </div>
                    <div class="col-lg-6">
                        @Html.Action("Register", "AccountSurface")
                    </div>
                </div>
            </div>

        </div>
}

@section footerScripts{
}
